			<div
				class="modal-footer">
				{# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> #}
				<a href="{{path('app_login')}}" type="button" class="btn btn-primary">Connectez-vous</a>
			</div>
		</div>
	</div>
