			<div class=" container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample11" aria-controls="navbarsExample11" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse d-lg-flex" id="navbarsExample11">
					<a class="navbar-brand col-lg-3" href="{{path('app_main')}}">PACS</a>
					<ul class="navbar-nav col-lg-6 justify-content-lg-center">
						<li class="nav-item">
							<a class="nav-link" aria-disabled="true" {% if app.user %} href="#" {% else %} data-bs-toggle="modal" data-bs-target="#exampleModal" {% endif %}>Agenda</a>
						</li>
						<li
							class="nav-item">
							{# <a class="nav-link" aria-disabled="true" href="#">Annuaire</a> #}
							<a class="nav-link" aria-disabled="true" {% if app.user %} href="#" {% else %} data-bs-toggle="modal" data-bs-target="#exampleModal" {% endif %}>Annuaire</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" aria-disabled="true" {% if app.user %} href="#" {% else %} data-bs-toggle="modal" data-bs-target="#exampleModal" {% endif %}>Emplois</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" aria-disabled="true" {% if app.user %} href="#" {% else %} data-bs-toggle="modal" data-bs-target="#exampleModal" {% endif %}>Formations</a>
						</li>
					</ul>
					<div class="d-block d-lg-flex col-lg-3 justify-content-lg-end">
						<div class="icon-container mx-0">
							<i class="icon bi bi-people-fill"></i>
							{# <span class="bg-success rounded-circle text-light py-0 px-1 fs-6 position-absolute top-0 end-0 mr-1 ">{{usersConnected}}</span> #}
						</div>
						{% if app.user %}
							<div
								class="icon-container position-relative ms-0">
								{# <i class="icon bi bi-people-fill"></i> #}
								<span class="bg-success rounded-circle text-light py-0 px-1 fs-6 position-absolute top-0 start-0 ms-0">23</span>
							</div>
							<div
								class="profile-picture">
								{# {% if app.user %} #}
								<img src="{{ asset('assets/img/profil/img_profil.jpg') }}" alt="Photo de profil" class="rounded-circle user-profil">
							</div>
						{% else %}
							<div class="profile-picture">
								<a href="{{path('app_login')}}">
									<i class="icon bi bi-person-circle"></i>
								</a>

							</div>
						{% endif %}


						{% if app.user %}
							<div class="icon-container">
								<a href="{{path('app_logout')}}">
									<i class="icon bi bi-box-arrow-right"></i>
								</a>
							</div>
						{% endif %}

					</div>
				</div>
			</div>
