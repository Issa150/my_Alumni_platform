{% for user in users %}
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-4 d-flex align-items-center justify-content-center my-bg-green rounded-start">
                <img class="w-50 rounded-circle card_user-profil m-3" src="{{ asset('assets/img/profil/img_profil.jpg') }}" alt="">
            </div>
            <div class="col-8">
                <div class="card-body">
                    <h5 class="card-title">{{ user.firstname }} {{ user.lastname }}</h5>
                    <p class="card-text">{{ user.bio }}</p>
                    <p class="card-text">
                        <button class="btn my-btn-green">
                            <a href="{{ path('app_profile', {'id': user.id}) }}" class="text-white text-decoration-none">Voir le profil</a>
                        </button>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endfor %}