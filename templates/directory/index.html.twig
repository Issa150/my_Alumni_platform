{% extends 'base.html.twig' %}

{% block title %}Annuaire des anciens élèves de Colombbus
{% endblock %}

{% block body %}
	{# BANNIERE PHOTO #}
	<div class="container position-relative">

		<div class="card text-light rounded-0">

			<img src="{{ asset('assets/img/default/banner.jpg') }}" class="card-img rounded-0 directoryHero" alt="...">

			<div class="my-overlay-gradient card-img-overlay d-flex justify-content-center align-items-center">
				<h1 class="card-title text-uppercase mb-5 directoryTitle">
					annuaire</h1>
			</div>


		</div>

		{# BARRE DE RECHERCHE #}
		<div class="d-flex justify-content-center ">
			<div class="searchAnnuaire d-flex justify-content-between align-items-center rounded-pill w-75 p-2 shadow bg-white">

				<div class="input-container- w-100 h-100 border-end d-flex align-items-center">
					<input type="text" class="w-100 ms-3 border-0 inputSearch" placeholder="Nom">
				</div>
				<div class="input-container w-100">
					<input type="text" class="w-100 ms-3 border-0 inputSearch" placeholder="Prenom">
				</div>
				<button type="submit" class="btn end-0 p-0">
					<i class="fa-solid fa-magnifying-glass text-white my-btn-red p-4 rounded-circle"></i>
				</button>
			</div>
		</div>


	</div>


	<div
		class="row container mx-auto mt-5">

		{# AFFINER LA RECHERCHE #}
		<div class="col-3 my-bg-gray p-5 my-5">
			<div class="d-flex justify-content-around mb-5">
				<i class="fa-solid fa-sliders"></i>
				<h6>Affiner la recherche</h6>
			</div>
			<select class="form-select mb-3" aria-label="Default select example">
				<option selected>Année de promotion</option>
				<option value="1">One</option>

			</select>
			<select class="form-select mb-3" aria-label="Default select example">
				<option selected>Domaine d'activité</option>
				<option value="1">One</option>

			</select>
			<select class="form-select mb-3" aria-label="Default select example">
				<option selected>Lieu</option>
				<option value="1">One</option>

			</select>

		</div>

		{# CARDS ANNUAIRE #}
		<div class="col mt-5 ms-5">
			{% for user in AllUsers %}
				<div class="card mb-3">
					<div class="row g-0">
						<div class="col-4 d-flex align-items-center justify-content-center my-bg-green rounded-start">
							<img class="w-50 rounded-circle card_user-profil m-3" src="{{asset('assets/img/profil/img_profil.jpg')}}" alt="">
						</div>
						<div class="col-8">
							<div class="card-body">
								<h5 class="card-title">{{user.firstname}}
									{{user.lastname}}</h5>
								<p class="card-text">{{user.bio}}</p>
								<p class="card-text">
									<button class="btn my-btn-green">
										<a href="{{ path('app_profile', {'id': user.id}) }}" class="text-white text-decoration-none">Voir le profil</a>
									</button>
								</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{# ----------------------------------------- #}

	</div>
{% endblock %}
