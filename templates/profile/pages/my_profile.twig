{% extends 'profile/profile_layout.html.twig' %}
{% block content %}
	<h1 class="border-bottom border-3 my-border-green my-text-green">Mon profil</h1>

	{{ form_start(form) }}

	<div>
		<label for="picture">Photo de profil</label>
		{{ form_widget(form.picture) }}
	</div>

	<div>
		<label for="cover">Photo de couverture</label>
		{{ form_widget(form.cover) }}
	</div>

	<div class="row">
		<div class="col-md-6">
			<label for="firstname">Prénom</label>
			{{ form_widget(form.firstname) }}
		</div>
		<div class="col-md-6">
			<label for="lastname">Nom</label>
			{{ form_widget(form.lastname) }}
		</div>
	</div>

	<div>
		<label for="email">Adresse e-mail</label>
		{{ form_widget(form.email) }}
	</div>

	<div>
		<label for="phoneNumber">Numéro de téléphone</label>
		{{ form_widget(form.phoneNumber) }}
	</div>

	<div>
		<label for="bio">Biographie</label>
		{{ form_widget(form.bio) }}
	</div>

	<div>
		<label for="cv">CV</label>
		{{ form_widget(form.cv) }}
	</div>

	<div>
		<label for="dateOfBirth">Date de naissance</label>
		{{ form_widget(form.dateOfBirth) }}
	</div>

	<div>
		<label for="gender">Genre</label>
		{{ form_widget(form.gender) }}
	</div>

	<div>
		<label for="studyField">Domaine d'étude</label>
		{{ form_widget(form.studyField) }}
	</div>

	<div>
		<label for="certificateObtention">Obtention du certificat</label>
		{{ form_widget(form.certificateObtention) }}
	</div>

	<div>
		<label for="city">Ville</label>
		{{ form_widget(form.city) }}
	</div>

	<div>
		<label for="country">Pays</label>
		{{ form_widget(form.country) }}
	</div>

	<div class="text-center">
		<button type="submit" class="btn my-bg-green-medium my-2 fw-bolder px-5 fs-5">Sauvegarder</button>
	</div>

	{{ form_end(form) }}

{% endblock %}