{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" class="container">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 text-center">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}
        <div class="w-50 mx-auto my-5 bg-white p-5 border rounded">
            <h1 class="mb-3 font-weight-normal text-center">S'identifier</h1>
            <label for="username" class="mb-1">E-mail :</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password" class="mt-3 mb-1">Mot de passe :</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}
            
            <div class="mt-3"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a></div>
            <button class="btn btn-lg btn-primary mt-3 w-100" type="submit">Connexion</button>
            <p>contacter Colombbus si vous n’avez pas reçu vos liens de  connexion</p>
            <a href="mailto:contact.alumnipacs@colombbus.org">contact.alumnipacs@colombbus.org</a>
            
        </div>
        
    </form>
{% endblock %}
